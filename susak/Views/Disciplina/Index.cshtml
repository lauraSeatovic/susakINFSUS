@model IEnumerable<susak.Models.Disciplina>

@{
    ViewData["Title"] = "Index";
}

<div class="container mt-4">
    <h1>Discipline</h1>

    <form asp-action="Index" method="get" class="mb-3">
        <div class="input-group">
            <input type="text" name="searchString" value="@Context.Request.Query["searchString"]" class="form-control" placeholder="Pretraži po nazivu..." />
            <button type="submit" class="btn btn-outline-primary">Pretraži</button>
        </div>
    </form>

    <p>
        <a class="btn btn-success" asp-action="Create">Create New</a>
    </p>

    <table class="table table-striped" style="table-layout: fixed; width: 100%;">
        <thead class="table-light">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Naziv)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Opis)
                </th>
                <th style="width: 25%;">
                    Actions
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Naziv)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Opis)
                    </td>
                    <td class="text-end">
                        <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@item.DisciplinaId">Edit</a>
                        <a class="btn btn-sm btn-info" asp-action="MasterDetails" asp-route-id="@item.DisciplinaId">Details</a>
                        <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.DisciplinaId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
