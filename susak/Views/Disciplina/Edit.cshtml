@model susak.Models.Disciplina

<h2>Uredi disciplinu</h2>

<form asp-action="EditMD" method="post">
    <input type="hidden" asp-for="DisciplinaId" />

    <div class="mb-3">
        <label asp-for="Naziv" class="form-label"></label>
        <input asp-for="Naziv" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="Opis" class="form-label"></label>
        <textarea asp-for="Opis" class="form-control"></textarea>
    </div>

    <h4>Treneri</h4>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Ime</th>
                <th>Prezime</th>
                <th>Ukloni</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var trener in Model.Trener)
            {
                <tr>
                    <td>@trener.Ime</td>
                    <td>@trener.Prezime</td>
                    <td>
                        <input type="checkbox" name="TreneriZaBrisanje" value="@trener.TrenerId" />
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="mb-3">
        <label class="form-label fw-bold">Dodaj trenere</label>
        <div>
            @foreach (var trener in (SelectList)ViewBag.SviTreneri)
            {
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" name="DodajTreneriId" value="@trener.Value" id="trener_@trener.Value" />
                    <label class="form-check-label" for="trener_@trener.Value">@trener.Text</label>
                </div>
            }
        </div>
    </div>

    <div class="mb-3">
        <label for="DodajTrenera" class="form-label fw-bold">Dodaj trenera (primjer padajuca lista)</label>
        <select id="DodajTrenera" name="DodajTrenerId" class="form-select">
            <option value="">-- Odaberite trenera --</option>
            @foreach (var trener in (SelectList)ViewBag.SviTreneri)
            {
                <option value="@trener.Value">@trener.Text</option>
            }
        </select>
    </div>



    <button type="submit" class="btn btn-primary">Spremi</button>
</form>
