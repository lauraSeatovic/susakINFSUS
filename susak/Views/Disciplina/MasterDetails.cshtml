@model susak.Models.Disciplina

@{
    ViewData["Title"] = "Detalji discipline";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-0">Detalji discipline</h2>
        <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@Model.DisciplinaId">Uredi disciplinu</a>
    </div>

    <div class="card mb-4">
        <div class="card-body">
            <h4 class="card-title">@Model.Naziv</h4>
            <p class="card-text">@Model.Opis</p>

            <h5 class="mt-4">Treneri:</h5>
            <ul class="">
                @foreach (var trener in Model.Trener)
                {
                    <li class="">
                        @trener.Ime @trener.Prezime (@trener.StrucnaSprema)
                    </li>
                }
            </ul>
        </div>
        
    </div>

    <div class="d-flex justify-content-end mb-3">
        <a class="btn btn-success btn-sm me-2"
           asp-controller="Disciplina"
           asp-action="AddNoviClanToDisciplina"
           asp-route-id="@Model.DisciplinaId">Dodaj novog člana</a>
        <a class="btn btn-primary btn-sm"
           asp-controller="Disciplina"
           asp-action="AddPostojeciClanToDisciplina"
           asp-route-id="@Model.DisciplinaId">Dodaj postojećeg člana</a>
    </div>

    <table class="table table-striped" style="table-layout: fixed; width: 100%;">
        <thead class="table-light">
            <tr>
                <th>Ime</th>
                <th>Prezime</th>
                <th>OIB</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var clan in Model.Clan)
            {
                <tr>
                    <td>@clan.Ime</td>
                    <td>@clan.Prezime</td>
                    <td>@clan.Oib</td>
                    <td class="text-end">
                        <a class="btn btn-sm btn-secondary" asp-controller="Clan" asp-action="Edit" asp-route-id="@clan.ClanId" asp-route-returnUrl="@Context.Request.Path">Uredi</a>
                        <a class="btn btn-sm btn-info" asp-controller="Clan" asp-action="Details" asp-route-id="@clan.ClanId" asp-route-returnUrl="@Context.Request.Path">Detalji</a>
                        <form asp-action="UkloniClan" method="post" class="d-inline">
                            <input type="hidden" name="disciplinaId" value="@Model.DisciplinaId" />
                            <input type="hidden" name="clanId" value="@clan.ClanId" />
                            <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Jeste li sigurni da želite ukloniti člana?');">Ukloni</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    

    <a class="btn btn-secondary mt-3" asp-action="Index">Natrag na popis</a>
</div>
