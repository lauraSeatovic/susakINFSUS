@model susak.Models.Clan

@{
    ViewData["Title"] = "Detalji člana";
}

<h1 class="mb-4">Detalji člana</h1>

<div class="card">
    <div class="card-header bg-primary text-white">
        @Model.Ime @Model.Prezime
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Ime</dt>
            <dd class="col-sm-9">@Html.DisplayFor(m => m.Ime)</dd>

            <dt class="col-sm-3">Prezime</dt>
            <dd class="col-sm-9">@Html.DisplayFor(m => m.Prezime)</dd>

            <dt class="col-sm-3">OIB</dt>
            <dd class="col-sm-9">@Html.DisplayFor(m => m.Oib)</dd>

            <dt class="col-sm-3">Datum rođenja</dt>
            <dd class="col-sm-9">@(Model.DatumRodjenja.HasValue ? Model.DatumRodjenja.Value.ToString("dd.MM.yyyy") : "")</dd>

            <dt class="col-sm-3">Adresa</dt>
            <dd class="col-sm-9">@Html.DisplayFor(m => m.Adresa)</dd>

            <dt class="col-sm-3">Kontakt</dt>
            <dd class="col-sm-9">@Html.DisplayFor(m => m.Kontakt)</dd>
        </dl>
    </div>
    <div class="card-footer">
        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.ClanId" asp-route-returnUrl="@ViewData["ReturnUrl"]">Uredi</a>
        <a href="@ViewData["ReturnUrl"]" class="btn btn-secondary">Natrag</a>
    </div>
</div>
