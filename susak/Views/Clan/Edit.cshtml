@model susak.Models.Clan

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Clan</h4>
<hr />
<form asp-action="Edit" asp-route-returnUrl="@ViewData["ReturnUrl"]">
    <input type="hidden" asp-for="ClanId" />
    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

    <div class="mb-3 row">
        <label asp-for="Ime" class="col-sm-2 col-form-label fw-bold"></label>
        <div class="col-sm-10">
            <input asp-for="Ime" class="form-control" />
            <span asp-validation-for="Ime" class="text-danger"></span>
        </div>
    </div>

    <div class="mb-3 row">
        <label asp-for="Prezime" class="col-sm-2 col-form-label fw-bold"></label>
        <div class="col-sm-10">
            <input asp-for="Prezime" class="form-control" />
            <span asp-validation-for="Prezime" class="text-danger"></span>
        </div>
    </div>

    <div class="mb-3 row">
        <label asp-for="Oib" class="col-sm-2 col-form-label fw-bold"></label>
        <div class="col-sm-10">
            <input asp-for="Oib" class="form-control" />
            <span asp-validation-for="Oib" class="text-danger"></span>
        </div>
    </div>

    <div class="mb-3 row">
        <label asp-for="DatumRodjenja" class="col-sm-2 col-form-label fw-bold"></label>
        <div class="col-sm-10">
            <input asp-for="DatumRodjenja" class="form-control" type="date" />
            <span asp-validation-for="DatumRodjenja" class="text-danger"></span>
        </div>
    </div>

    <div class="mb-3 row">
        <label asp-for="Adresa" class="col-sm-2 col-form-label fw-bold"></label>
        <div class="col-sm-10">
            <input asp-for="Adresa" class="form-control" />
            <span asp-validation-for="Adresa" class="text-danger"></span>
        </div>
    </div>

    <div class="mb-3 row">
        <label asp-for="Kontakt" class="col-sm-2 col-form-label fw-bold"></label>
        <div class="col-sm-10">
            <input asp-for="Kontakt" class="form-control" />
            <span asp-validation-for="Kontakt" class="text-danger"></span>
        </div>
    </div>

    <div class="mb-3 row">
        <div class="offset-sm-2 col-sm-10">
            <input type="submit" value="Save" class="btn btn-primary" />
            <a href="@ViewData["ReturnUrl"]" class="btn btn-secondary">Natrag</a>
        </div>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
