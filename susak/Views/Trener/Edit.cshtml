@model susak.Models.Trener

@{
    ViewData["Title"] = "Uredi trenera";
}

<div class="container mt-4">
    <h1 class="mb-4">Uredi trenera</h1>

    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
        <input type="hidden" asp-for="TrenerId" />

        <div class="mb-3">
            <label asp-for="Ime" class="form-label"></label>
            <input asp-for="Ime" class="form-control" />
            <span asp-validation-for="Ime" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Prezime" class="form-label"></label>
            <input asp-for="Prezime" class="form-control" />
            <span asp-validation-for="Prezime" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="StrucnaSprema" class="form-label"></label>
            <input asp-for="StrucnaSprema" class="form-control" />
            <span asp-validation-for="StrucnaSprema" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="KorisnikId" class="form-label"></label>
            <select asp-for="KorisnikId" class="form-select" asp-items="ViewBag.KorisnikId"></select>
            <span asp-validation-for="KorisnikId" class="text-danger"></span>
        </div>

        <div class="d-flex justify-content-between">
            <a asp-action="Index" class="btn btn-secondary">Natrag na popis</a>
            <input type="submit" value="Spremi" class="btn btn-primary" />
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
